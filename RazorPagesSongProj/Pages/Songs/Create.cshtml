@model RazorPagesSongProj.Pages.Songs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="container-2">

    <h4>Song</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Song.Artist" class="control-label"></label>
                    <input asp-for="Song.Artist" class="form-control" />
                    <span asp-validation-for="Song.Artist" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Song.Title" class="control-label"></label>
                    <input asp-for="Song.Title" class="form-control" />
                    <span asp-validation-for="Song.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Song.Genre" class="control-label"></label>
                    <input asp-for="Song.Genre" class="form-control" />
                    <span asp-validation-for="Song.Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Song.Score" class="control-label"></label>
                    <input asp-for="Song.Score" class="form-control" />
                    <span asp-validation-for="Song.Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
